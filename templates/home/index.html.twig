{% extends 'base.html.twig' %}


{% block title %}Accueil{% endblock %}

{% block body %}

	<div class="container-fluid">
		<div class="row d-flex justify-content-evenly">
			<div class="col-md-6 col-xl-10 mt-4">
        		{{ render_datatable(tables) }}
			</div>
		</div>
    </div>

	{% for item in materiel %}    
		<div class="modal fade" id="Detail-{{item.id}}-Modal" tabindex="-1" aria-labelledby="Detail-{{item.id}}-ModalLabel">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
						<h1 class="modal-title fs-5 text-dark" id="Detail-{{item.id}}-ModalLabel">Detail du materiel</h1>
						<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
					</div>
					<div class="modal-body text-center text-dark">
						<p>Id : {{ item.id }}</p>
						<p>Nom : {{ item.nom }}</p>
						<p>Prix Hors Taxe : {{ item.prixHt }}</p>
						<p>Taux de TVA : {{ item.TVA.libelle }}</p>
						<p>Prix TTC : {{ item.prixTtc }}</p>
						<p>Quantité : {{ item.quantite }}</p>
						<p>Date de création : {{ item.dateDeCreation |date("d/m/Y H:i", "Europe/Paris") }}</p>
						<a class="btn btn-lg" href="{{ path('app_to_pdf', { 'id' : item.id}) }}"> Pdf</a>
					</div>
				</div>
		 	</div>
		</div>
	{% endfor %}



{% endblock %}
